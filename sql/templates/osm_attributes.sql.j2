DROP TABLE IF EXISTS bicycle_infrastructure;
CREATE TABLE bicycle_infrastructure AS ( -- 7 s
    SELECT edge_id,
           CASE
                WHEN (highway = 'cycleway' AND (foot != 'designated' OR foot IS NULL)) OR
			   		(highway = 'cycleway' AND ((tags -> 'segregated' ='yes') AND (foot != 'designated' OR foot IS NULL))) OR
                    (tags -> 'cycleway' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot != 'designated' OR foot IS NULL)) OR
					(tags -> 'cycleway:left' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot != 'designated' OR foot IS NULL)) OR
					(tags -> 'cycleway:right' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot != 'designated' OR foot IS NULL)) OR
                    (tags -> 'cycleway:both' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot != 'designated' OR foot IS NULL)) OR
					((tags -> 'bicycle_road' = 'yes') AND (foot != 'designated') AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'bicycle_road' = 'yes') AND (tags -> 'segregated' = 'yes') AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'bicycle_road' = 'yes') AND (tags -> 'sidewalk' = ANY('{yes,separate,opposite,left,right}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'bicycle_road' = 'yes') AND (tags -> 'sidewalk:both' = ANY('{yes,separate}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'bicycle_road' = 'yes') AND (tags -> 'sidewalk:left' = ANY('{yes,separate,opposite}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'bicycle_road' = 'yes') AND (tags -> 'sidewalk:right' = ANY('{yes,separate,opposite}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'cyclestreet' = 'yes') AND (foot != 'designated') AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'cyclestreet' = 'yes') AND (tags -> 'segregated' = 'yes') AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'cyclestreet' = 'yes') AND (tags -> 'sidewalk' = ANY('{yes,separate,left,right,opposite}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'cyclestreet' = 'yes') AND (tags -> 'sidewalk:both' = ANY('{yes,separate}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'cyclestreet' = 'yes') AND (tags -> 'sidewalk:left' = ANY('{yes,separate,opposite}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'cyclestreet' = 'yes') AND (tags -> 'sidewalk:right' = ANY('{yes,separate,opposite}')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((bicycle = 'designated') AND (foot != 'designated') AND (tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'segregated' = 'yes'))
					THEN 'bicycle_way'

                WHEN (highway = 'cycleway' AND (foot = 'designated')) OR
			   		(highway = 'cycleway' AND (tags -> 'segregated' ='no')) OR
                    (highway = 'footway' AND (bicycle = 'designated') AND (tags -> 'footway' != 'sidewalk') ) OR
					(highway = 'pedestrian' AND (bicycle = 'designated')) OR
                    (tags -> 'cycleway' = ANY ('{track,opposite_track,segregated,yes,separate,opposite}') AND (foot = 'designated')) OR
					(tags -> 'cycleway:left' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot = 'designated')) OR
					(tags -> 'cycleway:right' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot = 'designated')) OR
                    (tags -> 'cycleway:both' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot = 'designated')) OR
					((tags -> 'bicycle_road' = 'yes') AND (foot = 'designated')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL)) OR 
					((tags -> 'bicycle_road' = 'yes') AND (tags -> 'segregated' = 'no') AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
					((tags -> 'cyclestreet' = 'yes') AND (foot = 'designated')) AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL)) OR 
					((tags -> 'cyclestreet' = 'yes') AND (tags -> 'segregated' = 'no') AND ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL) AND (tags -> 'max_speed' IS NULL))) OR
                    ((bicycle = 'designated' AND foot = 'designated') AND 
                    ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL OR access = 'no') OR (highway = ANY('{path,bridleway,cycleway,footway,track}') AND (tracktype != ALL ('{grade4,grade5}') OR tracktype IS NULL))))
					    THEN 'mixed_way'

                WHEN tags -> 'cycleway' = 'lane' OR
			   		tags -> 'cycleway:both' = 'lane' OR
					tags -> 'cycleway:left' = 'lane' OR
					tags -> 'cycleway:right' = 'lane' OR
			   		tags -> 'cycleway' = 'opposite_lane' OR
					tags -> 'cycleway:both' = 'opposite_lane' OR
					tags -> 'cycleway:left' = 'opposite_lane' OR
					tags -> 'cycleway:right' = 'opposite_lane' OR
					tags -> 'cycleway:lane' = 'exclusive' OR
					tags -> 'cycleway:lane' = 'advisory' OR
					tags -> 'cycleway:lane' = 'pictogram'
					--OR tags -> 'cycleway' = 'shared_lane' OR
					    THEN 'bicycle_lane'	
                    
                WHEN (tags -> 'cycleway' = ANY('{share_busway,opposite_share_busway}')) OR
                     (tags -> 'cycleway:left' = ANY('{share_busway,opposite_share_busway}')) OR
                     (tags -> 'cycleway:right' = ANY('{share_busway,opposite_share_busway}')) OR
                     (tags -> 'cycleway:both' = ANY('{share_busway,opposite_share_busway}'))
                      THEN 'bus_lane'

                WHEN (highway = 'cycleway' AND (foot = 'yes')) OR
                    (highway = 'footway' AND (bicycle = 'yes')) OR
					(highway = 'pedestrian' AND (bicycle = 'yes')) OR
                    (tags -> 'cycleway' = ANY ('{track,opposite_track,segregated,yes,separate,opposite}') AND (foot = 'yes')) OR
					(tags -> 'cycleway:left' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot = 'yes')) OR
					(tags -> 'cycleway:right' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot = 'yes')) OR
                    (tags -> 'cycleway:both' = ANY ('{track,opposite_track,segregated,yes,separate}') AND (foot = 'yes')) OR
                    ((bicycle = 'yes' AND foot = 'designated') AND 
                    ((tags -> 'motor_vehicle' = 'no' OR tags-> 'motor_vehicle' IS NULL OR access = 'no') OR (highway = ANY('{path,bridleway,cycleway,footway,track}') AND (tracktype != ALL ('{grade4,grade5}') OR tracktype IS NULL))))
					THEN 'mixed_way_non_designated'
               ELSE 'no'

           END AS bicycle_infrastructure
    FROM network_edge
);

